<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <stroke android:width="1dp" android:color="#F01A44" />
                    <size android:width="30dp" android:height="30dp" />
                </shape>
            </item>

            <item android:width="8dp" android:height="2dp" android:left="6dp" android:top="18dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#F01A44" />
                    </shape>
                </rotate>
            </item>

            <item android:width="19dp" android:height="2dp" android:left="9dp" android:top="14dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#F01A44" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>